<h1> My Shoes </h1>

<ul>
    <% @my_shoes.each do |shoe| %>
      <li>-----------------------------------</li>
      <li><%= shoe.name %> </li>
      <li><%= shoe.brand %></li>
      <li><%= shoe.price_per_day %></li>
      <li><%= shoe.is_rented ? "Currently rented" : "Not yet rented" %></li>
      <button><%= link_to "Shoe Details", shoe_path(shoe) %></button>
      <li>-----------------------------------</li>
    <% end %>
</ul>

<button><%= link_to "Add a Shoe", new_shoe_path %></button>
<button><%= link_to "View Bookings", bookings_path %></button>
