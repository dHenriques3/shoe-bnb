
<div class="row justify-content-center">
  <div class="col-sm-8 my-3">
    <%= form_with url: shoes_path, method: :get, class: "d-flex" do %>
      <%= text_field_tag :query,
            params[:query],
            class: "form-control",
            placeholder: "Search Your Sneaker"
        %>
      <%= submit_tag "Search", name: "", class: "btn btn-primary btn-sm" %>
    <% end %>

  </div>

  <h1 class="text-center"> Available To Rent</h1>

<br>

</div>

<div class="row">
    <% @shoes.each do |shoe| %>

    <div class="card col-4 m-2" style="width: 25%;">
      <img class="card-img-top" src="https://source.unsplash.com/random?nike" alt="Card image cap">
      <div class="card-body">
        <h5 class="card-title"><%= shoe.name %> </h5>
        <p class="card-text">
        Brand: <%= shoe.brand %>
        <br>
        Price_per_day: <%= shoe.price_per_day %>
        </p>
        <%= link_to "Shoe Details", shoe_path(shoe), class: "btn btn-success" %>
      </div>
    </div>

  <% end %>

</div>
